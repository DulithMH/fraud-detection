on: [push, pull_request]
jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: "3.10"
      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt
          pip install nbval
      - name: Lint (black)
        run: |
          pip install black flake8
          black --check .
          flake8
      - name: Run tests
        run: |
          pytest -q
      - name: Execute notebooks (nbval)
        run: |
          pytest --nbval --sanitize-with tests/nbval_sanitize.yaml notebooks/
